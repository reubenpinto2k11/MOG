<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/tool_bar"/>
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="75dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address :"
            android:textStyle="bold"
            android:layout_marginLeft="45dp"
            android:textSize="24sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Museum of Goa"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Plot No.79, Pilerne Industrial Estate,\nPilerne, Bardez,\nGoa - 403511."
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.5"/>

        <TextView
            android:id="@+id/museum_ph_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            android:text="09236119324"/>

        <TextView
            android:id="@+id/museum_email_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            android:text="mail@museumofgoa.com"/>

        <TextView
            android:id="@+id/museum_fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            android:text="www.facebook.com/museumofgoa"/>

    </LinearLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        android:layout_margin="0dp"
        android:padding="0dp"
        />

</android.support.v4.widget.DrawerLayout>